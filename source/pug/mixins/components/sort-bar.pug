mixin sort-bar
  .sort-bar
    ul.sort-bar__list
      li.sort-bar__item.sort-bar__item--layout Планировка
      li.sort-bar__item.sort-bar__item--apartment Квартира
      li.sort-bar__item.sort-bar__item--btn
        button.sort-bar__btn(type="button" data-sort-type="square" data-sort-direction="direct")
          span S, м²
          span.sort-bar__btn-icons
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--direct
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--reverse
      li.sort-bar__item.sort-bar__item--btn
        button.sort-bar__btn(type="button" data-sort-type="floor" data-sort-direction="direct")
          span Этаж
          span.sort-bar__btn-icons
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--direct
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--reverse
      li.sort-bar__item.sort-bar__item--hand-over.sort-bar__item--btn
        button.sort-bar__btn(type="button" data-sort-type="handOver" data-sort-direction="direct" disabled)
          span Сдача
          span.sort-bar__btn-icons
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--direct
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--reverse
      li.sort-bar__item.sort-bar__item--btn
        button.sort-bar__btn.current(type="button" data-sort-type="price" data-sort-direction="direct")
          span Цена, ₽
          span.sort-bar__btn-icons
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--direct
            +icon("icon-shevron", 7 ,4).sort-bar__btn-icon.sort-bar__btn-icon--reverse
